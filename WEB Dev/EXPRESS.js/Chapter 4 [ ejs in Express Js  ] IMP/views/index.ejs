<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Navbar with Footer</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    /* Flexbox setup for the entire page */
    html,
    body {
      height: 100%;
      margin: 0;
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      /* Ensure content fills the entire screen */
    }

    .content {
      margin-top: 10vh;
      margin-left: 3vw;
      flex: 1;
      /* Ensures the content area takes available space */
    }

    footer {
      background-color: #343a40;
      /* Dark background for footer */
      color: white;
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <!-- Navbar -->
     <%- include('nav_bar.ejs', {hero_name:"Spider-man"}) %>   <!--include parse of ejs -->

     
      <div class="content">
        <h1>Welcome to the Page</h1>
        <p>This is some content. The footer will stick to the bottom.</p>
      </div>

      <!-- Footer -->
      <%- include('footer.ejs') %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>